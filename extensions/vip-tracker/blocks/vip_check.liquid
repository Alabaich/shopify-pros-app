{% if customer %}
  <script>
    document.addEventListener("DOMContentLoaded", function() {
      const customerId = "{{ customer.id }}";
      
      const proxyUrl = "/apps/vip-status/check?customerId=" + customerId;

      console.log("üîç Checking VIP status for:", customerId);

      fetch(proxyUrl)
        .then(res => res.json())
        .then(data => {
          console.log("VIP Check Result:", data);
        })
        .catch(err => console.error("‚ùå VIP Check Error:", err));
    });
  </script>
{% endif %}

